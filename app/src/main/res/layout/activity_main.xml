<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Podaj stawkę VAT"
            app:layout_constraintEnd_toStartOf="@+id/stawkaVatSpinner"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CenaTV" android:textSize="25sp"/>

    <TextView
            android:id="@+id/CenaTV"
            android:layout_width="58dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Cena"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:autoText="false" tools:autoSizeTextType="50"
            android:textSize="25sp"/>

    <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:gravity="right"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView"/>

    <Spinner
            android:id="@+id/stawkaVatSpinner"
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:gravity="right" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="80dp"
            android:text="Podatek dochodowy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="25sp"/>

    <Spinner
            android:id="@+id/dochodowySpinner"
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/stawkaVatSpinner"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="229dp"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="80dp"
            android:text="@string/czy_jeste_p_atnikiem_vat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textSize="25sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tak_nieVat"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>

    <Spinner
            android:id="@+id/tak_nieVat"
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dochodowySpinner"/>

    <TextView
            android:id="@+id/textView5"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Czy jest to wydatek 'samochodowy'?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:textSize="25sp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/nextActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Calculate "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" android:onClick="nextActivity"/>
    <Spinner
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:id="@+id/SamochódTak_Nie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/textView5"/>
    <TextView
            android:text="zł"
            android:layout_width="22dp"
            android:layout_height="32dp"
            android:id="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" tools:text="zł" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>